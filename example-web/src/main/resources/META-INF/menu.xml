<?xml version="1.0" encoding="UTF-8"?>
<menu name="admin" xmlns="http://www.truenewx.org/schema/menu">

    <item caption="通用" permission="COMMON" hidden="true">
        <link href="/index" />
        <link href="/mine/*" />
        <rpc id="mineController" method="*" />
        <link href="/unstructured/upload/*" />
    </item>

    <item caption="系统管理" icon="icon-cogs">
        <item caption="角色管理" href="/role/list" role="top">
            <item caption="添加角色" role="top">
                <link href="/role/add" />
            </item>
            <item caption="修改角色" role="top">
                <link href="/role/*/update" />
            </item>
            <item caption="删除角色" role="top">
                <rpc id="roleController" method="countManagers" />
                <rpc id="roleController" method="del" />
            </item>
            <item caption="调整排序" role="top">
                <rpc id="roleController" method="move" />
            </item>
        </item>
        <item caption="管理员管理" href="/manager/list" role="top" icon="icon-group">
            <item caption="添加管理员" role="top">
                <link href="/manager/add" />
            </item>
            <item caption="修改管理员" role="top">
                <link href="/manager/*/update" />
            </item>
            <item caption="重置密码" role="top">
                <link href="/manager/*/password" />
                <rpc id="managerController" method="resetPassword" />
            </item>
            <item caption="禁用/启用" role="top">
                <rpc id="managerController" method="reverseDisabled" />
            </item>
        </item>
        <item caption="操作日志" href="/log/action" role="top" icon="icon-list-ul" />
        <item caption="系统日志" href="/log/system" role="top" icon="icon-bars">
            <link href="/log/system/*" />
            <rpc id="systemLogController" method="getLast" />
            <rpc id="systemLogController" method="getAfter" />
            <rpc id="systemLogController" method="getBefore" />
        </item>
    </item>

    <item caption="用户管理" href="/user/list" permission="USER_LIST" icon="icon-user">
        <item caption="查看用户详情" permission="USER_DETAIL">
            <link href="/user/*/detail" />
        </item>
        <item caption="禁用/启用" permission="USER_DISABLE">
            <rpc id="userController" method="reverseDisabled" />
        </item>
    </item>

</menu>
